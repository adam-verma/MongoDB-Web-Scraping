<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li id="mainTab" class="nav-item" >
                <a class="nav-link" href="/">Home </a>
            </li>
            <li id="scrapeTab" class="nav-item">
                <a class="nav-link" href="/scrape">Scrape</a>
            </li>
            <li id="saveTab" class="nav-item">
                <a class="nav-link" href="/saved">Saved List</a>
            </li>
            {{#if savedArticle}}
            <li class="nav-item">
            <a class="btn btn-danger" id="clearSavedBtn">Clear All Park Info</a>
            </li>
            {{/if}}
        </ul>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div id="savedArticles">
            {{#each savedArticle}}
            <ul class="dropdown">
                <!-- Park List Dropdown --> 
                <li class="list-item">
                    <div class="card" data-id={{this._id}}>
                        <div class="card-header">
                            {{this.name}}
                        </div>  
                        <div class="article-body card-body">
                            <div id="contact"> 
                            <h4>{{this.phone}}</h4>
                            <h5>{{this.address}}</h5>
                            </div>
                            <h4>
                            <a class="article" href=""></a>   
                            <a class="btn btn-danger" id="removeBtn" data-id={{this._id}}>Remove from Saved</a>
                            <a class="btn btn-info noteBtn" data-id={{this._id}}>Add Note to Park</a>
                            </h4>
                            <p id="notes"></p>
                        </div>
                    </div>
                </li>
            </ul>
            {{/each}}
        </div>
            {{#unless savedArticle.length}}
            <div class="alert alert-info text-center" role="alert">
                <h3> 
                No Parks have been saved.
                </h3>
            </div>
            <div class="card">
                <div class="card-header text-center">
                    <h3>Click Here to Browse Scraped Available Texas Parks</h3>
                </div>
                <div class="card-body text-center">
                    <h4>
                    <a href="/">Browse Park Info</a>
                    </h4> 
                </div>
            </div>
            {{/unless}}
        </div>
        <footer class="footer"> 
            <h5>Texas Parks MongoDB Scraper</h5> 
        </footer>
    </div>
</div>